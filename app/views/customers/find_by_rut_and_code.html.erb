<div class="row row-content fix-bot">
	<div class="col-md-6 col-xs-12">
		<h1 class="bold no-bot no-top h4-mobile">Número de Cotización </h1>
		<p class="quotation-subtitle"><%= @quotation.code %></p>
	</div>
</div>
<%= render 'customers/stepper' %>
<%= render 'quotations/header_customer' %>

<div class="row hidden-xs">
	<ul class="nav nav-tabs" id="myTab" role="tablist">
		<li class="nav-item">
			<a class="nav-link tab-quotation active" id="products-tab" data-toggle="tab" href="#products" role="tab" aria-controls="products" aria-selected="true">Productos</a>
		</li>
		<li class="nav-item">
			<a class="nav-link tab-quotation" id="customer-tab" data-toggle="tab" href="#customer" role="tab" aria-controls="customer" aria-selected="false">Datos Cliente</a>
		</li>
	</ul>
</div>
<div class="row hidden-lg hidden-md hidden-sm bot-space">
	<div class="col-xs-12 text-center">
		<%= select_tag :tab_selector, options_for_select([["Productos","products-tab"],["Datos Cliente", "customer-tab"]], 'products-tab'), autofocus: true, class:'inlineb' %>
	</div>
</div>
<div class="tab-content" id="quotation-content">
	<div class="tab-pane fade active" id="products" role="tabpanel" aria-labelledby="products-tab">
		<%= render 'quotations/products_tab' %>
	</div>
	<div class="tab-pane fade" id="customer" role="tabpanel" aria-labelledby="customer-tab">
		<%= render 'quotations/customer_tab/normal' %>
	</div>
</div>
<script>
	$('#tab_selector').select2();
	$("#products-tab").click();
	$('#tab_selector').on('select2:select', function() {
		$("#"+$(this).val()+"").click();
	});
</script>
<div class="middle-height">
	<h2 class="weight300">¿Olvidaste tu contraseña?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	<%= render "devise/shared/error_messages", resource: resource %>
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10 extra-mob col-md-10 col-md-offset-1">
			<div class="field text-left">
				<%= f.label :email %><br />
				<%= f.email_field :email, required: 'required', autofocus: true, 'data-bv-notempty-message': 'El campo no puede estar en blanco', 'data-bv-emailAddress-message': 'Correo inválido' %>
			</div>

			<div class="actions top-both">
				<%= f.submit "Enviar instrucciones", class:'btn btn-flat btn-login' %>
			</div>
		</div>
	</div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
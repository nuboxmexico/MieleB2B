<div class="row top-login">
  <div class="col-md-8 col-xs-10 col-md-offset-2 col-xs-offset-1">
    <%= bv_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'bform' }) do |f| %>
    <h3 class="title-login">BIENVENIDO</h3>
    <!-- CORREO -->
    <div class="text-left field">
      <%= f.email_field :email, required: 'required', autofocus: true, 'data-bv-notempty-message': 'El campo no puede estar en blanco', 'data-bv-emailAddress-message': 'Correo inválido' %>
    </div>
    <!-- CONTRASEÑA -->
    <div class="text-left field">
      <%= f.password_field :password, autocomplete: false ,required: 'required', 'data-bv-notempty-message': 'El campo no puede estar en blanco', 'data-bv-stringLength-message': 'Contraseña inválida' %>
    </div>
    <% if devise_mapping.rememberable? %>
    <div class="text-right field-remember">
      <%= f.check_box :remember_me do %>
        <span class="cr"><i class="cr-icon fas fa-check" ></i></span>
         Recordar
      <% end %>
    </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Iniciar Sesión", class: "btn btn-flat btn-login" %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
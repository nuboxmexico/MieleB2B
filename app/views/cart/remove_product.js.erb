<% end %>
<% end %>

<% if @parent %>
$(".item<%= @parent.id %>").removeClass('linked-alert');
$(".item<%= @parent.id %>").addClass('mandatory-alert');
<% if @parent.product_instalation %>
<% @cart.cart_items.where(product: @parent.product_instalation.products).each do |item| %>

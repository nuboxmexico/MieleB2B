<div class="box-cart-left pad-box no-right-box margin-bottom-box">
    <div class="row">   
        <div class="col-md-12 col-xs-12 text-left">
            <p class="title-box-checkout" style="font-size: 18px !important;">Unidad inmobiliaria</p>
        </div>
    </div>
            
    <div class="row">
        <br>
        <div class="col-md-4 col-xs-12">
            <p class="title-input-real_state">Nombre</p>
            <input class="input-real_state new_validation" onchange="validateInputsNewRealState()" type="text"  multiple="true" id="name_unit">
        </div>
        <div class="col-md-4 col-xs-12">
            <p class="title-input-real_state">Cant. de unidades</p>
            <input class="input-real_state new_validation" onchange="validateInputsNewRealState()" type="number" multiple="true" id="quantity_unit">
        </div>
        <div class="col-md-4 col-xs-12">
            <p class="title-input-real_state">Prod. por unidad</p>
            <input  id="products_quantity_unit" min="1" onchange="validateInputsNewRealState()" class="input-real_state new_validation" type="number"  multiple="true">
        </div>
    </div>
    

    <div class="row">
        <br>
        <div class="col-md-4 col-xs-12">
            <p class="title-input-real_state">Total de productos de unidad</p>
            <input id="total_product_unit_new_checkout" class="input-real_state field-bordered" type="text" name="u_tit" multiple="true"  value="0" disabled>
        </div>
        <div class="col-md-4 col-xs-12">
            <p class="title-input-real_state">Valor por unidad inmobiliaria</p>
            <input id="value_unit_new_checkout" class="input-real_state field-bordered" type="text" name="u_tit" multiple="true" value="0" disabled>
        </div>
        <div class="col-md-4 col-xs-12">
            <p class="title-input-real_state">Valor total de unidades</p>
            <input id="total_value_unit_new_checkout" class="input-real_state field-bordered" type="text" name="u_tit" multiple="true" value="0" disabled>
        </div>
    </div>



    <div class="row">
    <br>
      <div class="col-xs-12">
        <div class="form-group actions-container text-right">
          <a  class="btn btn-flat" onclick="deleteUnitAux()">
            Eliminar
          </a>
        
          
          <a  class="btn btn-miele save-dispatch" id="btn_create_new_real_state" onclick="createUnit(<%=@quotation.id%>)">
            Guardar
          </a>
               
             </div>
           </div>
         </div>
</div>

<script>
  //$("#btn_create_new_real_state").attr("disabled", true);
  
  function validateInputsNewRealState(){
    var inputs = document.getElementsByClassName('new_validation');
    var i = 0
    while (i<inputs.length){
      if (inputs[i].value == ""){
        $("#btn_create_new_real_state").attr("disabled", true);
        return false
      }
      i++;
    }
    $("#btn_create_new_real_state").removeAttr("disabled", false);
    return true
  } 
  validateInputsNewRealState(); 








</script>
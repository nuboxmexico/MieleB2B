<div class="row top-header">  
	<div class="col-lg-12 col-xs-12 no-right no-left">
		<div class="card-shadow margin-plus" id="mobile-accordion">
			<div class="card-shadow-head" role="tab">
				<div class="row">
					<div class="top-row-mobile hidden-lg hidden-sm hidden-md">
						<a class="collapsed" role="button" data-toggle="collapse" data-parent="#mobile-accordion" href="#collapse<%= @quotation.id %>" aria-expanded="false" aria-controls="collapse<%= @quotation.id %>"><i class="fa fa-angle-down tertiary-row"></i></a>
					</div>
					<div class="col-sm-1 col-xs-4">
						<p class="title-data"><b>Fecha</b></p>
						<p class="text-data"><%= @quotation.created_at.strftime('%d/%m/%Y') %></p>
					</div>
					<div class="col-sm-2 col-xs-4">
						<p class="title-data"><b>Nombre</b></p>
						<p class="text-data"><%= @quotation.try(:customer_name) %></p>
					</div>
					<div class="col-sm-1 col-xs-4">
						<p class="title-data"><b>RUT</b></p>
						<p class="text-data"><%= @quotation.try(:rut)%></p>
					</div>
					<div class="col-sm-2 hidden-xs">
						<p class="title-data"><b>Nombre Vendedor</b></p>
						<p class="text-data"><%= @quotation.user.try(:fullname) %></p>
					</div>
					<div class="col-sm-2 hidden-xs">
						<p class="title-data"><b>Correo Vendedor</b></p>
						<p class="text-data"><%= @quotation.user.try(:email)%></p>
					</div>
					<div class="col-sm-<%= @quotation.user.is_mca? ? '1' : '2' %> hidden-xs">
						<p class="title-data"><b>Teléfono</b></p>
						<p class="text-data"><%= @quotation.user.try(:phone)%></p>
					</div>
					<div class="col-sm-1 hidden-xs">
						<p class="title-data"><b>Correo</b></p>
						<p class="text-data"><%= @quotation.email %></p>
					</div>
					<div class="col-sm-1 hidden-xs text-center top-file">
						<% if @quotation.quotation_document %>
						<%= link_to @quotation.quotation_document.document.url(:original), target: '_blank', class:'inlineb hidden-xs hidden-sm' do %>
						<%= image_tag('file-white.svg', class: 'file-icon hidden-xs hidden-sm right-space-icon')%>
						<% end %>
						<% end %>
					</div>
				</div>
			</div>
			<div id="collapse<%= @quotation.id %>" class="panel-collapse collapse hidden-lg hidden-md hidden-sm card-shadow-head" role="tabpanel" aria-labelledby="headingTwo">
				<div class="row">
					<div class="col-xs-4">
						<p class="title-data"><b>Nombre Vendedor</b></p>
						<p class="text-data"><%= @quotation.user.try(:fullname) %></p>
					</div>
					<div class="col-xs-4">
						<p class="title-data"><b>Correo Vendedor</b></p>
						<p class="text-data"><%= @quotation.user.try(:email)%></p>
					</div>
					<div class="col-xs-4">
						<p class="title-data"><b>Teléfono</b></p>
						<p class="text-data"><%= @quotation.user.try(:phone)%></p>
					</div>
				</div>
				<div class="row extra-pad-card-quotation">
					<div class="col-xs-4">
						<p class="title-data"><b>Correo</b></p>
						<p class="text-data"><%= @quotation.try(:email)%></p>
					</div>
					<div class="col-xs-4">
						<% if @quotation.quotation_document %>
						<%= link_to @quotation.quotation_document.document.url(:original), target: '_blank', class:'inlineb hidden-xs hidden-sm' do %>
						<%= image_tag('file-white.svg', class: 'file-icon right-space-icon')%>
						<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>